{% extends 'base.html.twig' %}

{% block title %}Ma commande{% endblock %}

{% block body %}
<h1>Passer ma commande<h1>
    <p>Choisissez vos préférences</p>
    <p>Choisissez votre adresse de livraison</p>
{% set formHtml %}
{{form_start(form, {action:path('order_recap')})}}
{{ form_label(form.adresses, 'Choisir l\'adresse de livraison')}}
<a href="{{ path('account_adress_add')}}">Ajouter une nouvelle adresse</a>
{{form_end(form)}}
{% endset %}

{{ formHtml|replace({'[br]' : '<br/>'})|raw }}
<p>Récapitulatif de ma commande</p>
{% for key,product in cart %}
<img src="/uploads/{{product.product.illustration}}" alt="{{product.product.name}}">
    {{product.product.name}}
    x {{product.quantity}}
{% endfor %}
<p>Bouton paiement</p>


{% endblock %}
