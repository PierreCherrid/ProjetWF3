{% extends 'base.html.twig' %}

{% block title %}{{product.name}} - EatLocal{% endblock %}

{% block body %}
<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <a href="{{path('product', { 'slug' : product.slug })}}">
        <img src="/uploads/{{product.illustration}}" alt="{{ product.name}}" class="img-fluid">
      </a>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{product.name}}</h5>
        <p class="card-text">{{product.description}}</p>
        <span>{{ (product.price /100)|number_format(2, ',', '.')}} â‚¬</span>
        <a href="{{ path('add_to_cart', { 'id' : product.id }) }}" class="btn btn-primary">Ajouter au panier</a>
      </div>
    </div>
  </div>
</div>
