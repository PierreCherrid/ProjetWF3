{% extends 'base.html.twig' %}

{% block title %}Nos produits - EatLocal{% endblock %}

{% block body %}
   <h1>Nos produits</h1>

    <div class="row">
        {% for product in products %}
            <div class="col-md-4">
            <div class="card-product text-center">
            <a href="{{path('product', { 'slug' : product.slug })}}">
            <img src="/uploads/{{product.illustration}}" alt="{{ product.name}}" class="img-fluid">
            </a>
            <h4>{{product.name}}</h4>
            <p>{{product.description}}</p>
            <span>{{ (product.price /100)|number_format(2, ',', '.')}} â‚¬</span>
            </div>
            <a href="#" class="btn btn-primary"> Ajouter au panier</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
