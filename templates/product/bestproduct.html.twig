<h1 class="best">Découvrez nos produits les plus vendus !</h1>
<div class="row">
{% for product in products %}
<div class="card mb-3 container" style="max-width: 540px;">
    <div class="row g-1">
      <div class="col-md-4">
          
          <img src="/uploads/{{product.illustration}}" alt="{{ product.name}}" class="img-fluid" style="max-width: 100%; max-height: 100%">
        </a>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{product.name}}</h5>
          <p class="card-text">{{product.description|u.truncate(120, '...')}}</p>
          <span class="d-flex justify-content-end">{{ (product.price /100)|number_format(2, ',', '.')}} €</span><br><br>
          <a href="{{path('product', { 'slug' : product.slug })}}" class="btn-green-primary">Voir le produit</a>
          <a href="{{ path('add_to_cart', { 'id' : product.id }) }}" class="btn-orange-primary ">Ajouter au panier</a>
        </div>
      </div>
    </div>
  </div>
 {% endfor %}
</div>
